<Window x:Class="PhotoNotes.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoNotes"
        mc:Ignorable="d" FontFamily="Segoe UI Light" FontSize="18"
        Title="Window1" Height="200" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="35"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="35"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="1" Grid.Row="1" VerticalAlignment="Bottom">Album name:</TextBlock>
        <TextBox x:Name="albumNameTextBox" Grid.Column="1" Grid.Row="2" Margin="0,0,0,10" BorderBrush="Black" VerticalAlignment="Top"/>
        <Button Grid.Column="1" Grid.Row="3" Content="OK" Margin="130,0" Background="Transparent" BorderBrush="Black" Click="Button_Click"></Button>

    </Grid>
</Window>
